---
export interface Props {
  subtle?: boolean;
  noGradient?: boolean;
}
const { subtle, noGradient } = Astro.props;
---

<div
  class:list={[
    "pointer-events-none",
    "absolute inset-0 -z-50",
    subtle && "bg-[length:100%_175%]",
    noGradient
      ? "bg-zinc-900"
      : "bg-gradient-to-b bg-no-repeat bg-blue-800 from-zinc-900 to-purple-800",
  ]}
>
  <div class="starfield absolute inset-0"></div>
</div>
<style>
  .starfield {
    background-image: url(/stars.png);
    background-repeat: repeat;
    mask-image: url(/stars-mask.webp);
    mask-repeat: repeat;
  }
</style>
