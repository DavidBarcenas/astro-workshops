---
import Layout from "../layouts/layout.astro";
import Header from "../components/esland/header.astro";
import Video from "../components/esland/video.astro";
import Intro from "../components/esland/intro.astro";
import Bento from "../components/esland/bento.astro";
import Guide from "../components/esland/guide.astro";
import Footer from "../components/esland/footer.astro";
---

<Layout title="Premios Esland">
  <Header />
  <Video />
  <main>
    <Intro />
    <Bento />
    <Guide />
  </main>
  <Footer />
</Layout>
<style is:global>
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
    margin-bottom: 1em;
    font-weight: 100;
    font-size: 1em;
    letter-spacing: 0.5px;
  }

  p strong {
    color: white;
    font-weight: 700;
  }

  #header-nav {
    animation: blur linear both;
    animation-timeline: scroll();
    animation-range: 200px 500px;
  }

  @keyframes blur {
    to {
      box-shadow:
        0px 5px 50px -5px rgba(0, 0, 0, 0.1),
        0px 0px 0 1px rgba(0, 0, 0, 0.3);
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
    }
  }
</style>
